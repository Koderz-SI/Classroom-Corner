    </header>
    <!-- End Navigation -->


    <!--BLog single section-->
    <section id="blog-single" class="p-top-80 p-bottom-80">

        <!--Container-->
        <div class="container clearfix">

            <div class="row">
                <% if (status == "Verified") { %>
                    <div class="col-xs-12">
                        <!--Respond-->
                        <div class="respond m-top-40">
                            <h4 class="m-bottom-20">Announcement</h4>
    
                            <!--Reply form-->
                            <div class="replyForm">
                                
                                <form method="post" action="/faculty/broadcast">
                                    <textarea name="msg" placeholder="Annoucement" id="message" cols="45"
                                        rows="10"></textarea>
                                        <input type="checkbox" name="urgent" value="urgent" style="width:20px;height:15px;">
                                <label for="urgent" style="font-size: 15px;"> Urgent</label><br>
                                    <button class="btn btn-main m-bottom-40" type="submit">Post Announcement</button>
    
                                </form>
    
    
                                <!--Reply form message-->
                                <div id="success">
                                    <h2>Your message has been sent. Thank you!</h2>
                                </div>
                                <div id="error">
                                    <h2>Sorry your message can not be sent.</h2>
                                </div>
                                <!--End reply form message-->
    
                            </div>
                            <!--End reply form-->
                        </div>
                        <!--End respond-->
    
                    </div> <!-- /.col -->
    
                <% } else if (status == "UnVerified"){ %>
                    <h2>Please wait while your form is verified!</h2>
                <% }else{ %>
                    <h3 style="text-align: center;">Please fill the form first</h3>
                    <div class="col-md col-sm p-bottom-30">
                        <div class="contact-form row">
    
                            <form name="ajax-form" id="ajax-form" action="/faculty/form" method="post">
                                

                                <div class="col-sm-12 contact-form-item wow zoomIn">
                                    <label>LinkedIn:</label>
                                    <input name="linkedin" id="name" type="url" required>
                                    <span class="error" id="err-email">This field is required</span>
                                </div>
                                <div class="col-sm-12 contact-form-item wow zoomIn">
                                    <label>Qualification:</label>
                                    <input name="qualification" id="name" type="text" required>
                                    <span class="error" id="err-email">This field is required</span>
                                </div>
                                <div class="col-sm-12 contact-form-item wow zoomIn">
                                    <label>Work Experience:</label><br>
                                    <textarea name="exp" id="message" required></textarea>
                                </div>
                                <div class="col-sm-12 contact-form-item wow zoomIn">
                                    <label>Awards & Honors:</label><br>
                                    <textarea name="awards" id="message" required></textarea>
                                </div>
                                <div class="col-sm-12 contact-form-item wow zoomIn">
                                    <button class="send_message btn btn-main btn-theme wow fadeInUp" id="send" data-lang="en" type="submit">submit</button>                
                                </div>
                                <div class="clear"></div>   
                                <div class="error text-align-center" id="err-form">There was a problem validating the form please check!</div>
                                <div class="error text-align-center" id="err-timedout">The connection to the server timed out!</div>
                                <div class="error" id="err-state"></div>
                            </form> 
                                        
                            <div class="clearfix"></div>
                            <div id="ajaxsuccess">Successfully sent!!</div>
                            <div class="clear"></div>
    
                        </div> 
                <% } %>
                
            </div> <!-- /.row -->

            <div class="row multi-columns-row">


    </section>
    <!--End blog single section-->


